<h1>忘れ物ないかな？</h1>

<table>
  <thead>
    <tr>
      <th>items</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><% item.nakamis do |nakami| %>
          <%= nakami.name %>
          <% end %>
        </td>
        <td><%= link_to '訂正', edit_item_path(item) %></td>
        <td><%= link_to '削除', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

